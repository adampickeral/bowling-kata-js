{
  "ecmaFeatures": {
    "modules": true,
    "blockBindings": true
  },
  "env": {
    "node": true,
    "es6": true,
    "jasmine": true
  },
  "rules": {
    "semi": 2,
    "curly": 2,
    "strict": 0,
    "quotes": [2, "single", "avoid-escape"],
    "strict": 0,
    "no-underscore-dangle": 0,
    "camelcase": 0,
    "no-unused-vars": [2, {"args": "none"}],
    "new-cap": 0,
    "radix": 2,
    "space-before-blocks": 2,
    "no-multiple-empty-lines": 2,
    "one-var": [2, { const: "never" }],
    "brace-style": [ 2, "1tbs", { "allowSingleLine": true }]
  },
  "globals": {
    "document": true,

    //karma
    "expect": true,
    "describe": true,
    "xdescribe": true,
    "it": true,
    "xit": true,
    "setFixtures": true,
    "beforeEach": true,
    "afterEach": true
  }
}
